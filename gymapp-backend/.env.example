# ============================================
# BACKEND ENVIRONMENT VARIABLES
# ============================================

# Server
NODE_ENV=development
PORT=8080
LOG_LEVEL=info

# Database
DATABASE_URL="mysql://username:password@localhost:3306/gym_app_db"

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=7d

# QR Code Secret
QR_SECRET=your-qr-secret-change-this
QR_TTL_SECONDS=120

# Firebase Admin SDK
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json

# CORS (Optional)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:19000